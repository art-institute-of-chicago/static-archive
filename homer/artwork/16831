    <div id="page-title-wrapper">
              <h1 class="title">Stowing Sail</h1>
        </div>

    
    </div>
   <!-- /navigation -->

                				        <div id="content">
                    <div id="content-content" class="clear-block"> 
<script type="text/javascript">var re="";</script>
<div class="artwork-content">

        <div id="artwork-image">
            <a href="..\/images\/50645_3943144.jpg" class="enlargement-link enlargement-link-16831"><img src="../images/50645_3943146.jpg" alt="Stowing Sail" title="Winslow Homer
