    <div id="page-title-wrapper">
              <h1 class="title">Coronation Stone of Motecuhzoma II (Stone of the Five Suns)</h1>
        </div>

    
    </div>
   <!-- /navigation -->

                				        <div id="content">
                    <div id="content-content" class="clear-block"> 
