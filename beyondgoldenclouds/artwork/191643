    <div id="page-title-wrapper">
              <h1 class="title">Bamboo with Chinese Yew and Deer with Maples</h1>
        </div>

    
    </div>
   <!-- /navigation -->

                				        <div id="content">
                    <div id="content-content" class="clear-block"> 
