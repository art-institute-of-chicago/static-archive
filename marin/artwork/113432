    <div id="page-title-wrapper">
              <h1 class="title">The Red Sun, Brooklyn Bridge</h1>
        </div>

    
    </div>
   <!-- /navigation -->

                				        <div id="content">
                    <div id="content-content" class="clear-block"> 
