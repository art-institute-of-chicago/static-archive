<script language="javascript">

    //Utils
    Array.prototype.unique = function() {
        var o = {}, i, l = this.length, r = [];
        for(i=0; i<l;i+=1) o[this[i]] = this[i];
        for(i in o) r.push(o[i]);
        return r;
    };

    function sortUnorderedList(ul, sortDescending) {
      if(typeof ul == "string")
        ul = document.getElementById(ul);

      // Get the list items and setup an array for sorting
      var lis = ul.getElementsByTagName("LI");
      var vals = [];

      // Populate the array
      for(var i = 0, l = lis.length; i < l; i++)
        vals.push(lis[i].innerHTML);

      // Sort it
      vals.sort();

      // Sometimes you gotta DESC
      if(sortDescending)
        vals.reverse();

      // Change the list on the page
      for(var i = 0, l = lis.length; i < l; i++)
        lis[i].innerHTML = vals[i];
    }

    var galleryObjects = {"artwork_205117":{"artwork_link":"..\/205117","object_title":"Artist's Studio \"Look Mickey\"","object_date_begin":"1\/1\/1973","object_date_end":"12\/31\/1973","object_image_thumbnail":"..\/images\/178288_2963604.jpg","object_image_medium":"..\/images\/178288_2963603.jpg","object_date_display":"1973","object_artist_culture_display":"Roy Lichtenstein<br \/>\nAmerican (1923 - 1997)","object_artist_sort_name":"Lichtenstein, Roy","object_tag_list":""},"artwork_205118":{"artwork_link":"..\/205118","object_title":"Artist's Studio \"The Dance\"","object_date_begin":"1\/1\/1974","object_date_end":"12\/31\/1974","object_image_thumbnail":"..\/images\/182098_2982052.jpg","object_image_medium":"..\/images\/182098_2982051.jpg","object_date_display":"1974","object_artist_culture_display":"Roy Lichtenstein<br \/>\nAmerican (1923 - 1997)","object_artist_sort_name":"Lichtenstein, Roy","object_tag_list":""},"artwork_204652":{"artwork_link":"..\/204652","object_title":"Artist's Studio with Model","object_date_begin":"1\/1\/1974","object_date_end":"12\/31\/1974","object_image_thumbnail":"..\/images\/182041_2981652.jpg","object_image_medium":"..\/images\/182041_2981651.jpg","object_date_display":"1974","object_artist_culture_display":"Roy Lichtenstein<br \/>\nAmerican (1923 - 1997)","object_artist_sort_name":"Lichtenstein, Roy","object_tag_list":""},"artwork_205131":{"artwork_link":"..\/205131","object_title":"Imperfect Painting","object_date_begin":"1\/1\/1986","object_date_end":"12\/31\/1986","object_image_thumbnail":"..\/images\/182101_2982100.jpg","object_image_medium":"..\/images\/182101_2982099.jpg","object_date_display":"1986","object_artist_culture_display":"Roy Lichtenstein<br \/>\nAmerican (1923 - 1997)","object_artist_sort_name":"Lichtenstein, Roy","object_tag_list":""},"artwork_203848":{"artwork_link":"..\/203848","object_title":"Perfect Painting","object_date_begin":"1\/1\/1986","object_date_end":"12\/31\/1986","object_image_thumbnail":"..\/images